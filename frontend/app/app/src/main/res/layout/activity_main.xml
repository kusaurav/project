<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffa">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">
<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/colorPrimary"-->
<!--            app:title="DS TechnoTrove"-->
<!--            app:titleTextColor="@color/black" />-->
<!--        <Space-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"/>-->
    </com.google.android.material.appbar.AppBarLayout>



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="50dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Mobile"
                    />

                <TextView
                    android:id="@+id/mobileAccessories"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:text="Mobile Accessories"
                    />

                <TextView
                    android:id="@+id/laptop"
                    android:layout_width="50dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:text="Laptop" />

                <TextView
                    android:id="@+id/videogames"
                    android:layout_width="50dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:text="Video Games"
                    />

                <TextView
                    android:id="@+id/software"
                    android:layout_width="70dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:text="Software"
                    />
            </LinearLayout>
        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>